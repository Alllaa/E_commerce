<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ndroid="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/select_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/size_selection_text"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linear_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="6"
        android:weightSum="6"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/xs"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_circle"
            >
            <TextView
                android:id="@+id/xs1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:text="XS"
                android:textSize="12sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/s"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_circle"
            >

            <TextView
                android:id="@+id/s1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:text=" S "
                android:textSize="12sp"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/m"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_circle"
            >

            <TextView
                android:id="@+id/m1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:text=" M"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_circle"
            >

            <TextView
                android:id="@+id/l1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:text="  L"
                android:textSize="12sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/xl"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_circle"
            >

            <TextView
                android:id="@+id/xl1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="  XL"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/xll"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_circle"
            >

            <TextView
                android:id="@+id/xll1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text=" XLL"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/select_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/color_selection"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/Relative_colors"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:weightSum="4">
        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/border_circle2"
            android:visibility="gone"

            >
            <View
                android:id="@+id/view1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/cirlce_color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

             />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel2"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="@drawable/border_circle"
            android:visibility="gone"

            >
            <View
                android:id="@+id/view2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/cirlce_color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel3"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="@drawable/border_circle"
            android:visibility="gone"

            >
            <View
                android:id="@+id/view3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/cirlce_color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"

                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="@drawable/border_circle"
            android:visibility="gone"

            >
            <View
                android:id="@+id/view4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/cirlce_color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/to_cart_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20sp"
        android:background="#000"
        android:text="@string/add_to_cart"
        android:textColor="#ffff"
        android:textSize="25sp" />

</LinearLayout>