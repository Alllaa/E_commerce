<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        >
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >

            <LinearLayout
                android:id="@+id/ship_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shipment_no"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/shipment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHIPMENT NO."
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/textColor_black"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_date"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/orderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHIPMENT NO."
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/textColor_black"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/ship_layout"
                android:layout_marginTop="10dp"
                >
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="7dp"

/>

                <ProgressBar
                    android:id="@+id/progress_bar11"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignEnd="@+id/product_image"
                    android:layout_alignRight="@+id/product_image"
                    android:layout_alignBottom="@+id/product_image"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="10dp"
                    android:indeterminate="true"
                    android:outlineAmbientShadowColor="#fff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/product_image"
                    android:layout_centerVertical="true"
                    >

                    <TextView
                        android:id="@+id/product_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_title"
                        android:textColor="@color/textColor_black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="start"
                        />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USD 29"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/textColor_black"
                        android:gravity="start"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/secondRelative"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativee"
                android:layout_centerHorizontal="true"
                >

                <View
                    android:id="@+id/firstCircle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle_grey"
                    android:layout_centerVertical="true"
                    />

                <View
                    android:id="@+id/firstLine"
                    android:layout_toRightOf="@+id/firstCircle"
                    android:layout_width="130dp"
                    android:layout_height="4dp"
                    android:background="#666666"
                    android:layout_centerVertical="true"
                    />
                <View
                    android:layout_toRightOf="@+id/firstLine"
                    android:id="@+id/secondCircle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle_grey"
                    android:layout_centerVertical="true"
                    />
                <View
                    android:id="@+id/secondLine"
                    android:layout_toRightOf="@+id/secondCircle"
                    android:layout_width="130dp"
                    android:layout_height="4dp"
                    android:background="#666666"
                    android:layout_centerVertical="true"
                    />
                <View
                    android:id="@+id/thirdCircle"
                    android:layout_toRightOf="@+id/secondLine"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle_grey"
                    android:layout_centerVertical="true"

                    />

            </RelativeLayout>
<LinearLayout
    android:layout_below="@+id/secondRelative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/process"
        android:layout_below="@+id/firstCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Processing"
        android:textColor="@color/textColor_black"
        android:layout_weight="1"
        android:gravity="start" />

                <TextView
                    android:id="@+id/shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipped"
                    android:textColor="@color/textColor_black"
                    android:layout_weight="1"
                    android:paddingLeft="17dp"
                    />
                <TextView
                    android:id="@+id/delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:textColor="@color/textColor_black"
                    android:layout_weight="1"
                    android:gravity="end"
                    />

</LinearLayout>
        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>