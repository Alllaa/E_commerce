<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="17dp"
        android:background="#ffff"
        android:clickable="true"
        android:id="@+id/card_wish_list">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_wish_list"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <ProgressBar
                    android:id="@+id/progress_bar_wish_List"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignEnd="@+id/img_wish_list"
                    android:layout_alignRight="@+id/img_wish_list"
                    android:layout_alignBottom="@+id/img_wish_list"
                    android:layout_marginEnd="31dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginBottom="22dp"
                    android:indeterminate="true"
                    android:outlineAmbientShadowColor="#fff" />
            </RelativeLayout>



            <LinearLayout
                android:id="@+id/linearr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_product_wish_list"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/line1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/item_title"
                    android:textColor="#000"
                    android:maxLength="30"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/delete_wish_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/linearr2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@drawable/ic_delete_black_24dp" />

            </LinearLayout>


            <TextView

                android:id="@+id/price_wish_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearr2"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="118dp"
                android:layout_marginLeft="118dp"
                android:layout_marginTop="10dp"
                android:text="@string/item_price" />

            <Button
                android:id="@+id/buy_wish_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_wish_list"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#000000"
                android:text="@string/buy_now_button_text"
                android:textColor="#fff"
                android:textStyle="bold" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>